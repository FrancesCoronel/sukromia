{
    "manifest_version": 2,
    "name": "Sukromia",
    "description": "Allows any messaging service to instantly become safe and secure.",
    "version": "1.0",
    "permissions": [
        "storage",
        "contextMenus",
        "tabs",
        "activeTab"
    ],
    "icons": {
        "16": "img/icon.png",
        "48": "img/iconLauncher.png",
        "128": "img/iconStore.png"
    },
    "background": {
        "scripts": [
            "js/vendor/cryptojs/rollups/aes.js",
            "js/min/sukromia.min.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "img/iconLauncher.png",
            "38": "img/iconLauncher.png"
        },
        "default_popup": "popup.html"
    }
}
